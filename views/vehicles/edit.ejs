<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= vehicle.brand %> - <%= vehicle.model %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/vehicles/<%= vehicle._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="vehicle[brand]" value="<%= vehicle.brand %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vehicle[model]" value="<%= vehicle.model %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="plate" name="vehicle[plate]" value="<%= vehicle.plate %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vehicle[color]" value="<%= vehicle.color %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/vehicles">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
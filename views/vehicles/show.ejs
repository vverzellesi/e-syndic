        <form id="delete-form" action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/vehicles/<%= vehicle._id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash" aria-hidden="true"></i> Deletar
            </button>
        </form>
    <% } %>


    <h4>Placa: <strong><%= vehicle.plate %></strong></h4>

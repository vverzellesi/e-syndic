<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Feedback</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/condos/<%= condo_id %>/feedbacks/<%= feedback._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="feedback[text]" value="<%= feedback.text %>">
                </div>
                <div class="form-group">
                    <select class="form-control" name="feedback[category]">
                        <%
                        var options = ['Suggestion', 'Compliment'];
                        for (var i = 0; i < options.length; i++) {
                            %><option value="<%= options[i] %>"><%= options[i] %></option><%
                        }
                        %>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/condos">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>


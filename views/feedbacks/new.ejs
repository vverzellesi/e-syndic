<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Adicionar Comentário em <%= condo.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo.id %>/feedbacks" method="post">
                <label>Comentário</label>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comentário" name="feedback[text]">
                </div>
                <label>Categoria</label>
                <div class="form-group">
                    <select class="form-control" name="feedback[category]">
                        <%
                        var options = ['Sugestão', 'Crítica', 'Elogio'];
                        for (var i = 0; i < options.length; i++) {
                            %><option value="<%= options[i] %>"><%= options[i] %></option><%
                        }
                        %>
                    </select>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
                </div>
            </form>
            <a href="/condos">Voltar</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Schedule an event in <%= space.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/spaces/<%= space._id %>/schedule?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text"  placeholder="Date to be Scheduled" name="space[scheduledDates]">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/spaces">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
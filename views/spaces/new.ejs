<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Adicionar Novo Espaço à <%= condo.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo._id %>/spaces" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Nome" name="space[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Lotação" name="space[maxCapacity]">
                </div>    
                <div class="form-group input-group">
                    <span class="input-group-addon" id="real-addon">R$</span>
                    <input class="form-control" type="number" min="0.01" step="0.01" placeholder="Preço de Aluguel" name="space[price]" aria-describedby="real-addon">
                </div> 
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
                </div>
            </form>
            <a href="/spaces">Voltar</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
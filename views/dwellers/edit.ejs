<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editar <strong><%= dweller.name %></strong></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/dwellers/<%= dweller._id %>?_method=PUT" method="post">
                <label>Nome</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="dweller[name]" value="<%= dweller.name %>">
                </div>
                <label>CPF</label>
                <div class="form-group">
                    <input class="form-control" type="text" id="cpf" name="dweller[cpf]" value="<%= dweller.cpf %>">
                </div>
                <label>RG</label>
                <div class="form-group">
                    <input class="form-control" type="text" id="rg" name="dweller[rg]" value="<%= dweller.rg %>">
                </div>
                <label>Data de Nascimento</label>
                <div class="form-group">
                    <div class="input-group date" data-provide="datepicker">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                        <input class="form-control" type="text" id="date" value="<%= dweller.birthday %>" name="dweller[birthday]">
                    </div>
                </div>
                <label>Telefone</label>
                <div class="form-group">
                    <input class="form-control" type="text" id="phone" name="dweller[phone]" value="<%= dweller.phone %>">
                </div>
                <label>E-mail</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="dweller[email]" value="<%= dweller.email %>">
                </div>
                <label>Email</label>
                <label>Nova Senha</label>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Nova Senha">
                </div>

                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Editar">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
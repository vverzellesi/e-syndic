<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Dweller</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/dwellers" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="dweller[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Tower" name="dweller[tower]">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Apartment Number" name="dweller[apartmentNumber]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="CPF" name="dweller[cpf]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="RG" name="dweller[rg]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Birthday" name="dweller[birthday]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Phone" name="dweller[phone]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="E-mail" name="dweller[email]">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/dwellers">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">

    <h1>Moradores no Apartamento <%= apartment.number %></h1>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/new" class="btn btn-success">Adicionar Novo Morador</a>

  <table id="index-table" class="table table-striped table-bordered" cellspacing="0">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>RG</th>
        <th>E-Mail</th>
      </tr>
    </thead>
    <tbody>
      <% apartment.dwellers.forEach(function(dweller) { %>    
        <tr>
          <td><a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/<%= dweller._id %>"><%= dweller.name %></a></td>
          <td><%= dweller.cpf %></td>
          <td><%= dweller.rg %></td>
          <td><%= dweller.email %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>

<% include ../partials/footer %>
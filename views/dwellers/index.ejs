<% include ../partials/header %>

<div class="container">

    <h1>Dwellers on Apartment <%= apartment.number %></h1>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/new" class="btn btn-success">Add a New Dweller</a>

    <% apartment.dwellers.forEach(function(dweller) { %>
    <li>
        <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/<%= dweller._id %>"><i class="fa fa-info" aria-hidden="true"></i></a>
        
        <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/<%= dweller._id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>

        <form id="delete-from" action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers/<%= dweller._id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </form>

        <%= dweller.name %>
    </li>
    <% }) %>

</div>

<% include ../partials/footer %>
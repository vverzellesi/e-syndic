<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editar Administrador <%= admin.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/admins/<%= admin._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="admin[name]" value="<%= admin.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="admin[cpf]" id="cpf" value="<%= admin.cpf %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="admin[function]" value="<%= admin.function %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Editar">
                </div>
            </form>
            <a href="/admins">Voltar</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editar <%= condo.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[name]" value="<%= condo.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="condo[address]" value="<%= condo.address %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
                </div>
            </form>
            <a href="/condos">Voltar</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
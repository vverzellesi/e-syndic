<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editar Torre <%= tower.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/towers/<%= tower._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="tower[name]" value="<%= tower.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tower[floors]" value="<%= tower.floors %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="tower[apartmentsPerFloor]" value="<%= tower.apartmentsPerFloor %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
                </div>
            </form>
            <a href="/towers">Voltar</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
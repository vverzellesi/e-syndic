<% include ../partials/header %>
<div class="container">
  
  <h1>List of Towers</h1>
  <a href="/condos/<%= condo._id %>/towers/new" class="btn btn-success">Add New Tower</a> <br>


  <% condo.towers.forEach(function(tower) { %>
    <li>
      <a href="/condos/<%= condo._id %>/towers/<%= tower._id %>"><i class="fa fa-info" aria-hidden="true"></i></a>
      <a href="/condos/<%= condo._id %>/towers/<%= tower._id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
      
      <form id="delete-from" action="/condos/<%= condo._id %>/towers/<%= tower._id %>?_method=DELETE" method="post">
        <input type="submit" class="btn btn-danger" value="Delete">    
      </form>
      <strong> Tower: <%= tower.name %></strong>
    </li>
    <li>Floors: <%= tower.floors %></li>
    <li>Apartments Per Floor: <%= tower.apartmentsPerFloor %></li>
    <br>
  <% }) %>

</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Tower to <%= condo.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/towers" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="tower[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Floors" name="tower[floors]">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Apartments Per Floor" name="tower[apartmentsPerFloor]">
                </div>    
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/towers">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
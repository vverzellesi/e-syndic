<% include ../partials/header %>

<div class="container">
  <h1><%= visitor.name %></h1>

  <% if (currentUser.role !== 'lobby') { %>
    <a class="btn btn-warning" href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/visitors/<%= visitor._id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i> Editar Visitante</a>
    <form id="delete-form" action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/visitors/<%= visitor._id %>?_method=DELETE" method="post">
      <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash" aria-hidden="true"></i> Deletar
      </button>
    </form>
  <% } %>


    <h4>CPF: <strong><%= visitor.cpf %></strong></h4>
    <h4>RG: <strong><%= visitor.rg %></strong></h4>
    <h4>Data de Nascimento: <strong><%= visitor.birthday %></strong></h4>
    <h4>Telefone: <strong><%= visitor.phone %></strong></h4>
    <h4>Relação: <strong><%= visitor.relationship %></strong></h4>

</div>

<% include ../partials/footer %>
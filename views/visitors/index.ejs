<% include ../partials/header %>

<div class="container">

    <h1>Visitantes do Apartamento <%= apartment.number %></h1>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/visitors/new" class="btn btn-success">Adicionar Novo Visitante</a>

  <table id="index-table" class="table table-striped table-bordered" cellspacing="0">
    <thead>
      <tr>
        <th>Nome</th>
        <th>CPF</th>
        <th>RG</th>
        <th>Relationship</th>
      </tr>
    </thead>
    <tbody>
      <% apartment.visitors.forEach(function(visitor) { %>    
        <tr>
          <td><a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/visitors/<%= visitor._id %>"><%= visitor.name %></a></td>
          <td><%= visitor.cpf %></td>
          <td><%= visitor.rg %></td>
          <td><%= visitor.relationship %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>

<% include ../partials/footer %>
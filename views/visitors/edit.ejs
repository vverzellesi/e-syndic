<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editar <strong><%= visitor.name %></strong></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment_id %>/visitors/<%= visitor._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="visitor[name]" value="<%= visitor.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="cpf" name="visitor[cpf]" value="<%= visitor.cpf %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="rg" name="visitor[rg]" value="<%= visitor.rg %>">
                </div>
                <div class="form-group">
                    <div class="input-group date" data-provide="datepicker">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                        <input class="form-control" type="text" id="date" value="<%= visitor.birthday %>" name="visitor[birthday]">
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="phone" name="visitor[phone]" value="<%= visitor.phone %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="visitor[relationship]" value="<%= visitor.relationship %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Editar">
                </div>
            </form>
            <a href="/visitors">Voltar</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
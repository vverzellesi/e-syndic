<% include ../partials/header %>

<div class="container">

    <h1>Número do Apartamento: <%= apartment.number %></h1>

    <h3>Andar: <%= apartment.floor %></h3>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a>
    <form id="delete-from" action="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>?_method=DELETE" method="post">
      <button type="submit" class="btn btn-danger">
          <i class="fa fa-trash" aria-hidden="true"></i>
      </button>
    </form>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/dwellers">Lista de Moradores</a><br>
    
    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/vehicles">Lista de Veículos</a><br>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>/visitors">Lista de Visitantes</a><br>

    <a href="/condos/<%= condo_id %>/towers/<%= tower_id %>/apartments/<%= apartment._id %>">Voltar</a>

</div>

<% include ../partials/footer %>
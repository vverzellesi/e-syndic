<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Adicionar Novo Apartamento à Torre <%= tower.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/condos/<%= condo_id %>/towers/<%= tower._id %>/apartments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Número" name="apartment[number]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Andar" name="apartment[floor]">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
                </div>
            </form>
            <a href="/condos">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>